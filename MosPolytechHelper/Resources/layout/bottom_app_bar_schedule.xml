<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.bottomappbar.BottomAppBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    android:layout_gravity="bottom"
        tools:showIn="@layout/fragment_schedule"
        android:theme="@style/AppTheme.AppBarOverlay"
    android:layout_width="match_parent"
        app:hideOnScroll="true"
        app:backgroundTint="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
    android:layout_height="wrap_content">
    <LinearLayout
            android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
            android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/button_advanced_search"
                    android:padding="4dp"
                android:layout_weight="1"
            android:background="?android:selectableItemBackground"
                android:src="@drawable/advanced_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageButton
                    android:id="@+id/button_grid_mode"
                    android:padding="4dp"
                android:layout_weight="1"
            android:background="?android:selectableItemBackground"
                android:src="@drawable/schedule_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <ImageButton
                    android:id="@+id/button_schedule_filter"
                    android:padding="4dp"
                android:layout_weight="1"
            android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_filter_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageButton
                    android:id="@+id/button_home"
                    android:padding="4dp"
                android:layout_weight="1"
            android:background="?android:selectableItemBackground"
                android:src="@drawable/schedule_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
                </LinearLayout>
</android.support.design.bottomappbar.BottomAppBar>
