<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/linear_layout_schedule_manager" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:orientation="horizontal" 
    android:layout_marginHorizontal="5dp">
    <RelativeLayout android:id="@+id/layout_schedule_manager" 
        android:background="@drawable/shape_lesson" 
        android:layout_width="match_parent" 
        android:layout_marginBottom="5dp" 
        android:layout_height="wrap_content">
        <TextView android:id="@+id/text_schedule_manager_title" 
            android:layout_marginLeft="5dp" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:hyphenationFrequency="full" 
            android:text="Группа 181-721" 
            android:textStyle="bold" 
            android:breakStrategy="high_quality" 
            android:textSize="16sp" 
            android:layout_alignParentTop="true" 
            android:layout_alignParentLeft="true"/>
        <TextView android:id="@+id/text_schedule_manager_files_number" 
            android:layout_alignParentBottom="true" 
            android:layout_centerInParent="true" 
            android:text="Всего файлов: 7" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/text_schedule_manager_type" 
            android:text="Кастомное" 
            android:layout_alignParentLeft="true" 
            android:layout_alignParentBottom="true" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"/>
        <CheckBox android:id="@+id/checkbox_schedule_manager_refresh" 
            android:layout_margin="5dp" 
            android:layout_alignParentTop="true" 
            android:layout_alignParentRight="true" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
