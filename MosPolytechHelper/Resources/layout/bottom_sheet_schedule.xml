<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:clickable="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    
        <RelativeLayout
            android:id="@+id/linLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--        <android.support.design.chip.ChipGroup
    android:id="@+id/chipGroup"
                android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
            <Button
                android:layout_below="@id/chipGroup"
                android:layout_alignParentLeft="true"
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->
            <TextView
                android:layout_alignParentTop="true"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:text="Any groups"
                android:padding="6dp"
                android:layout_margin="4dp"
                android:background="@drawable/shape_advanced_search_text"
            android:id="@+id/text_groups" />
            <Button
                android:layout_below="@id/text_groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download schedules"
            android:id="@+id/btn_acceptGroups" />
            <TextView
                android:layout_below="@id/btn_acceptGroups"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:text="Any subjects"
                android:padding="6dp"
                android:layout_margin="4dp"
                android:background="@drawable/shape_advanced_search_text"
            android:id="@+id/text_lesson_titles" />
            <TextView
                android:layout_below="@id/text_lesson_titles"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:text="Any lesson types"
                android:padding="6dp"
                android:layout_margin="4dp"
                android:background="@drawable/shape_advanced_search_text"
            android:id="@+id/text_lesson_types" />
            <TextView
                android:layout_below="@id/text_lesson_types"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:text="Any auditoriums"
                android:padding="6dp"
                android:layout_margin="4dp"
                android:background="@drawable/shape_advanced_search_text"
            android:id="@+id/text_auditoriums" />
            <TextView
                android:layout_below="@id/text_auditoriums"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:text="Any teachers"
                android:padding="6dp"
                android:layout_margin="4dp"
                android:background="@drawable/shape_advanced_search_text"
            android:id="@+id/text_teachers" />
            <Button
                android:layout_below="@id/text_teachers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
            android:id="@+id/btn_search" />
            <RelativeLayout
            android:elevation="2dp"
            android:clickable="true"
            android:id="@+id/layout_block"
                android:layout_below="@id/btn_acceptGroups"
                android:background="#DD222222"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" >
                <ProgressBar
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:id="@+id/progressBar"
                android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="10000" />
            <TextView
                android:id="@+id/text_progress"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:textAlignment="center"
                android:text="0 %"
                android:textStyle="bold"
                android:textColor="@color/textColorPrimary"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
                <Button
                android:textSize="16sp"
                android:layout_below="@id/text_progress"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:id="@+id/btn_cancel"
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorSecondary"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
</LinearLayout>