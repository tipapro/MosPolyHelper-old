<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_student_schedule"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:orientation="horizontal"  
    android:layout_marginHorizontal="5dp">
        
    <RelativeLayout android:id="@+id/layout_student_schedule"
        android:background="@drawable/item_border_lesson" 
        android:layout_width="match_parent" 
            android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView android:layout_alignParentLeft="true" 
            android:layout_alignParentTop="true" 
            android:id="@+id/student_schedule_time" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:textSize="13sp" 
            android:background="@drawable/border_lesson_type"
            android:layout_marginRight="4dp"/>
        <TextView android:layout_width="wrap_content" 
            android:layout_marginTop="1dp"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content" 
            android:textStyle="bold" 
            android:textColor="@android:color/white"
            android:id="@+id/student_schedule_type" 
            android:layout_toRightOf="@id/student_schedule_time" 
            android:layout_marginRight="5dp"
            android:textSize="13sp"/>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="1dp"
            android:id="@+id/recycler_auditoriums"
            android:layout_toRightOf="@id/student_schedule_type" 
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/text_student_schedule_title" 
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_below="@id/student_schedule_type" 
            android:hyphenationFrequency="full" 
            android:textStyle="bold" 
            android:breakStrategy="high_quality" 
            android:textSize="16sp">
        </TextView>
        <TextView android:layout_below="@id/text_student_schedule_title"
            android:layout_marginLeft="5dp"
            android:id="@+id/text_student_schedule_teachers" 
            android:layout_width="match_parent"
            android:textSize="13sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/text_student_schedule_teachers" 
            android:id="@+id/text_student_schedule_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="bold" 
        android:layout_alignParentRight="true"
        android:textColor="#AAAAAA"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_below="@id/text_student_schedule_teachers" 
            android:id="@+id/text_student_schedule_module_and_week_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="bold" 
        android:layout_alignParentLeft="true"
        android:textColor="#AAAAAA"/>
    </RelativeLayout>
</LinearLayout>
