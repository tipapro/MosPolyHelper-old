<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/linear_layout_schedule" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:orientation="vertical">
    <LinearLayout android:id="@+id/layout_schedule" 
        android:layout_width="match_parent" 
        android:orientation="vertical" 
        android:background="@drawable/shape_lesson" 
        android:layout_height="wrap_content">
        <View
            android:id="@+id/line_schedule_top_border" 
            android:layout_width="match_parent" 
            android:layout_height="1dp" 
            android:clickable="false"
            android:layout_marginHorizontal="1dp" 
            android:background="#FFFFFF"/>
        <RelativeLayout android:id="@+id/layout_schedule_head"
            android:clickable="false"
            android:background="@drawable/shape_lesson_head"
            android:paddingHorizontal="11.7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/text_schedule_time" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:textStyle="bold" 
                android:clickable="false"
                android:paddingRight="3dp" 
                android:paddingBottom="2dp" 
                android:layout_alignParentLeft="true"
                android:textSize="12sp" />
            <TextView android:id="@+id/text_schedule_order"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textStyle="bold"
                android:paddingBottom="2dp" 
                android:textSize="12sp"/>
         </RelativeLayout>
        <RelativeLayout android:id="@+id/layout_schedule_body"
            android:paddingHorizontal="11.7dp"
            android:clickable="false"
            android:paddingTop="5dp" 
            android:paddingBottom="6dp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" 
                android:layout_alignParentTop="true" 
                android:layout_alignParentLeft="true" 
                android:layout_marginRight="3dp" 
                android:layout_height="wrap_content" 
                android:textColor="@android:color/white" 
                android:id="@+id/text_schedule_type" 
                android:clickable="false"
                android:fontFamily="sans-serif-medium"
                android:textSize="12.5sp"/>
            <TextView android:textStyle="bold" 
                android:textSize="12.5sp" 
                android:singleLine="true" 
                android:layout_alignParentTop="true" 
                android:layout_alignParentRight="true" 
                android:clickable="false"
                android:maxLines="1" 
                android:gravity="right" 
                android:id="@+id/text_schedule_auditoriums" 
                android:layout_toRightOf="@id/text_schedule_type" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"/>
            <LinearLayout android:layout_below="@id/text_schedule_auditoriums" 
                android:layout_toLeftOf="@id/text_schedule_other_info" 
                android:layout_alignParentBottom="true" 
                android:layout_alignParentLeft="true" 
                android:layout_marginRight="2dp" 
                android:orientation="vertical" 
                android:layout_marginTop="-2sp"
                android:clickable="false"
                android:id="@+id/layout_schedule_title_and_teahers" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content">
                <TextView android:id="@+id/text_schedule_title" 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:hyphenationFrequency="full" 
                    android:textStyle="bold" 
                    android:clickable="false"
                    android:breakStrategy="balanced" 
                    android:textSize="13sp">
                </TextView>
                <TextView android:id="@+id/text_schedule_teachers" 
                    android:layout_width="match_parent" 
                    android:textSize="12sp" 
                    android:clickable="false"
                    android:layout_marginTop="-2sp"
                    android:hyphenationFrequency="full" 
                    android:breakStrategy="balanced" 
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView android:layout_below="@id/text_schedule_auditoriums" 
                android:layout_alignParentBottom="true" 
                android:layout_alignParentRight="true" 
                android:id="@+id/text_schedule_other_info" 
                android:gravity="bottom" 
                android:textAlignment="textEnd" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:textSize="10sp" 
                android:clickable="false"
                android:textColor="#BFC5CA"/>
        </RelativeLayout>
        <View android:layout_marginTop="3dp" 
            android:id="@+id/line_schedule_bottom_border" 
            android:layout_width="match_parent" 
            android:layout_height="1dp" 
            android:clickable="false"
            android:layout_marginHorizontal="1dp" 
            android:background="@drawable/line_schedule_border"/>
    </LinearLayout>
</LinearLayout>