<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_schedule"
        android:paddingTop="2dp" 
    android:paddingBottom="6dp" 
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="8dp"
        android:clickable="false" 
        android:background="@drawable/shape_lesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View android:id="@+id/schedule_divider"
        android:layout_marginTop="2dp" 
        android:layout_below="@id/text_schedule_time"
        android:layout_width="match_parent" 
        android:clickable="false" 
        android:layout_gravity="center_vertical" 
        android:background="#323232" 
        android:layout_height="1dp"/>
    <TextView android:id="@+id/text_schedule_time" 
        android:layout_alignParentTop="true" 
        android:layout_alignParentLeft="true" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="7dp"  
        android:fontFamily="sans-serif-medium" 
        android:layout_marginLeft="16dp" 
        android:textStyle="bold" 
        android:clickable="false" 
        android:textSize="13sp" />
    <TextView android:id="@+id/text_schedule_order" 
        android:layout_marginTop="12.7dp" 
        android:layout_marginLeft="16dp"
            android:layout_marginBottom="5dp"
        android:gravity="center" 
        android:layout_width="36sp" 
        android:layout_marginRight="16dp" 
        android:paddingBottom="3sp"
        android:layout_height="36sp" 
        android:clickable="false" 
        android:background="@drawable/shape_schedule_order" 
        android:textColor="#798086" 
        android:layout_alignParentLeft="true" 
        android:layout_below="@id/text_schedule_time" 
        android:textSize="20sp"/>
    <TextView android:layout_width="wrap_content" 
        android:paddingRight="6dp" 
        android:paddingTop="5dp" 
        android:layout_height="wrap_content" 
        android:layout_below="@id/schedule_divider" 
        android:layout_toRightOf="@id/text_schedule_order" 
        android:textColor="@android:color/white" 
        android:id="@+id/text_schedule_type" 
        android:clickable="false" 
        android:fontFamily="sans-serif-medium" 
        android:textSize="10.5sp"/>
    <TextView android:textStyle="bold" 
            android:textSize="11.5sp" 
        android:paddingBottom="1dp"
            android:layout_marginRight="16dp"
            android:clickable="false" 
            android:layout_span="2" 
            android:maxLines="1" 
            android:ellipsize="end" 
        android:textAlignment="textEnd"
        android:layout_toRightOf="@id/text_schedule_time" 
            android:layout_alignParentTop="true" 
        android:layout_alignParentRight="true" 
            android:fontFamily="sans-serif-medium" 
            android:id="@+id/text_schedule_auditoriums" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"/>
    <TextView android:layout_below="@id/text_schedule_time" 
        android:layout_toRightOf="@id/text_schedule_type" 
        android:id="@+id/text_schedule_other_info" 
        android:layout_marginRight="16dp" 
        android:textAlignment="textEnd" 
        android:paddingTop="6dp" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:textSize="10sp" 
        android:clickable="false" 
        android:textColor="#BFC5CA"/>
    <TextView android:id="@+id/text_schedule_title" 
        android:layout_marginTop="-3sp"
        android:layout_below="@id/text_schedule_type" 
        android:layout_toRightOf="@id/text_schedule_order" 
        android:layout_toLeftOf="@id/schedule_note_icon"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:hyphenationFrequency="none" 
        android:maxLines="2" 
        android:ellipsize="end" 
        android:textColor="@color/textColorPrimary" 
        android:clickable="false" 
        android:breakStrategy="balanced" 
        android:paddingBottom="2dp" 
        android:textSize="14.5sp" />
    <TextView android:id="@+id/text_schedule_teachers" 
        android:layout_width="match_parent" 
        android:textSize="12sp" 
        android:layout_marginTop="-3dp" 
        android:clickable="false" 
        android:maxLines="1" 
        android:ellipsize="end" 
        android:layout_toRightOf="@id/text_schedule_order" 
        android:layout_toLeftOf="@id/schedule_favorite_icon"
        android:layout_below="@id/text_schedule_title" 
        android:textColor="#AAAAAA" 
        android:hyphenationFrequency="full" 
        android:breakStrategy="balanced" 
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp" 
        android:clickable="false" 
        android:layout_marginRight="16dp" 
        android:id="@+id/schedule_note_icon"
        android:layout_below="@id/text_schedule_auditoriums"
        android:layout_alignParentRight="true" 
        android:background="@drawable/note_24px"
        android:visibility="gone"
        android:layout_width="16sp"
        android:layout_height="16sp"/>
    <View
        android:layout_marginLeft="2dp" 
        android:clickable="false" 
        android:layout_marginRight="16dp" 
        android:id="@+id/schedule_favorite_icon"
        android:layout_below="@id/schedule_note_icon"
        android:layout_alignParentRight="true" 
        android:background="@drawable/star_border_24px"
        android:visibility="gone"
        android:layout_width="16sp"
        android:layout_height="16sp"/>
</RelativeLayout>
</FrameLayout>