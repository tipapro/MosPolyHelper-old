<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorSecondary"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="5dp"> 
    <TextView
        android:textSize="16sp"
        android:textStyle="bold" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
    android:text="@string/schedule_preferences_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
    android:layout_height="wrap_content"
        android:background="@drawable/shape_schedule_preferences"
        android:layout_marginBottom="5dp">
    <TextView
        android:textSize="12sp"
            android:textStyle="bold" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text="@string/schedule_target_prompt"/>
    <Spinner
        android:id="@+id/spinner_schedule_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:entries="@array/schedule_target_array"/>
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
    android:layout_height="wrap_content"
        android:background="@drawable/shape_schedule_preferences"
        android:layout_marginBottom="5dp">
    <TextView
        android:textSize="12sp"
            android:textStyle="bold" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text="@string/text_schedule_type_prompt"/>
    <Spinner
        android:id="@+id/spinner_text_schedule_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/text_schedule_type_array"/>
    </LinearLayout>
         <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="200dp"
    android:layout_height="wrap_content"
        android:background="@drawable/shape_schedule_preferences"
        android:layout_marginBottom="5dp">
<Button
            android:id="@+id/button_goto_schedule_manager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:background="#00000000"
        android:text="@string/goto_schedule_manager"/>
    </LinearLayout>
</LinearLayout>
