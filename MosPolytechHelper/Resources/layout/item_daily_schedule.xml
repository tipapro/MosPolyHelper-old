<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/linear_layout_schedule_grid" 
    android:background="@drawable/shape_lesson"
    android:paddingVertical="4dp"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:orientation="vertical">
            <TextView android:id="@+id/text_schedule_time_grid" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"
        android:background="@drawable/bottom_stroke_day_title"
                android:fontFamily="sans-serif-medium" 
        android:textAlignment="center"
                android:clickable="false"
                android:paddingHorizontal="8dp"
        android:paddingTop="0dp"
                android:paddingBottom="4dp" 
                android:textSize="14sp" />
            <TextView android:layout_width="match_parent" 
                android:paddingHorizontal="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
                android:layout_height="wrap_content" 
                android:textColor="@color/textColorPrimary" 
                android:id="@+id/text_schedule_grid" 
                android:clickable="false"
                android:textSize="8sp"/>
</LinearLayout>