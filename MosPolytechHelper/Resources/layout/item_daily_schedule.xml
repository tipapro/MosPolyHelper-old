<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/linear_layout_schedule_grid" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:orientation="vertical">
    <LinearLayout android:id="@+id/layout_schedule_grid" 
        android:layout_width="match_parent" 
        android:orientation="vertical" 
        android:background="@color/pairBackgroundColor"
        android:layout_margin="1dp"
        android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/layout_schedule_head_grid"
            android:clickable="false"
            android:background="#ceddeb"
            android:paddingHorizontal="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/text_schedule_time_grid" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:textStyle="bold" 
                android:clickable="false"
                android:paddingRight="2dp" 
                android:paddingBottom="2dp" 
                android:layout_alignParentLeft="true"
                android:textSize="12sp" />
         </RelativeLayout>
        <RelativeLayout android:id="@+id/layout_schedule_body_grid"
            android:paddingHorizontal="3dp"
            android:clickable="false"
            android:paddingTop="3dp" 
            android:paddingBottom="4dp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" 
                android:layout_alignParentTop="true" 
                android:layout_alignParentLeft="true" 
                android:layout_marginRight="2dp" 
                android:layout_height="wrap_content" 
                android:textColor="@color/textColorPrimary" 
                android:id="@+id/text_schedule_grid" 
                android:clickable="false"
                android:textSize="10sp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>